{
  "manifest_version": 3,
  "name": "OAuth2 Extension Sample",
  "version": "1.0",
  "description": "A Chrome extension demonstrating OAuth2 authentication flow",
  "permissions": [
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://oauth2.example.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "images/icon.png"
  }
} 